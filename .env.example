# ==========================================================================
# SENTINEL SECURITY ORACLE - ENVIRONMENT CONFIGURATION
# ==========================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains sensitive credentials
# ==========================================================================

# ==========================================================================
# RPC ENDPOINTS
# ==========================================================================
# Sepolia Testnet (default for development)
SEPOLIA_RPC=https://ethereum-sepolia-rpc.publicnode.com

# Mainnet (production only)
MAINNET_RPC=https://ethereum-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Local Hardhat node
HARDHAT_RPC=http://127.0.0.1:8545

# ==========================================================================
# API KEYS (for simulation mode - production uses Vault DON)
# ==========================================================================
# Etherscan API Key - get from https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# xAI Grok API Key - get from https://console.x.ai
GROK_API_KEY=xai-your_grok_key_here

# Alchemy API Key (for RPC)
ALCHEMY_KEY=your_alchemy_key_here

# WalletConnect Project ID (for frontend)
VITE_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# ==========================================================================
# ENCRYPTION KEYS
# ==========================================================================
# AES-256-GCM encryption key for Confidential HTTP
# Generate with: openssl rand -hex 32
AES_KEY_ALL=your_64_character_hex_key_here

# Alternative key name for Sentinel
SENTINEL_ENCRYPTION_KEY=your_64_character_hex_key_here

# ==========================================================================
# WORKFLOW CONFIGURATION
# ==========================================================================
# Workflow owner address (must match config.production.json)
WORKFLOW_OWNER_ADDRESS=0x89feEbA43b294425C0d7B482770eefbcc1359f8d

# CRE Target (staging-settings, production-settings, or hackathon-settings)
CRE_TARGET=staging-settings

# ==========================================================================
# SMART CONTRACT ADDRESSES (update after deployment)
# ==========================================================================
# Sepolia Testnet Addresses
REGISTRY_ADDRESS=0x...
GUARDIAN_ADDRESS=0x...
AUDIT_LOGGER_ADDRESS=0x...
CROSS_CHAIN_GUARDIAN_ADDRESS=0x...

# ==========================================================================
# SENTINEL NODE CONFIGURATION
# ==========================================================================
# API Server
CRE_API_PORT=3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# Mempool Watcher
WS_PORT=8080
API_PORT=3001

# Private Keys (for development only - production uses Vault DON)
PRIVATE_KEY=your_private_key_here
SENTINEL_PRIVATE_KEY=your_sentinel_executor_key_here

# ==========================================================================
# WEBHOOKS & NOTIFICATIONS
# ==========================================================================
WEBHOOK_SECRET=your_webhook_secret_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ==========================================================================
# CCIP CONFIGURATION (for cross-chain features)
# ==========================================================================
CCIP_ROUTER_SEPOLIA=0x0BF3dE8c5D3e8A2B34D2BEeB17ABfCeBaf363A59
CCIP_ROUTER_ARBITRUM=0x..."
CCIP_ROUTER_BASE=0x..."
