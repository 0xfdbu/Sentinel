# =============================================================================
# Sentinel API Server Configuration
# =============================================================================

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# =============================================================================
# API Keys (Required) - DO NOT COMMIT REAL KEYS
# Get your keys from:
# - Etherscan: https://etherscan.io/apis
# - XAI: https://x.ai/
# =============================================================================

ETHERSCAN_API_KEY=your_etherscan_api_key_here
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4-1-fast-reasoning

# =============================================================================
# RPC Configuration (Tenderly Gateway)
# =============================================================================

SEPOLIA_RPC=https://sepolia.gateway.tenderly.co/5srkjbJkFMoz8BH8ZiCmsH
SEPOLIA_RPC_WS=wss://sepolia.gateway.tenderly.co/5srkjbJkFMoz8BH8ZiCmsH

# =============================================================================
# Confidential Transactions (TEE)
# =============================================================================

# Admin private key for confidential pause transactions (EIP-712 signing)
# Generate a new key: node -e "console.log(require('ethers').Wallet.createRandom().privateKey)"
ADMIN_PRIVATE_KEY=your_admin_private_key_here

# TEE API endpoint for confidential execution
TEE_API_URL=https://convergence2026-token-api.cldev.cloud

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info
